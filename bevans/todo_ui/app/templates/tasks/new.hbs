<h2>Add a new local Task</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Task</label>
        <div class="col-sm-10">
            {{input type="text" value=model.body class="form-control" placeholder="The Task"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Complete</label>
        <div class="col-sm-10">
            {{input type="checkbox" checked=model.complete class="form-control" placeholder="Is it complete"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveTask' model}}>Add to task list</button>
        </div>
    </div>
</div>
